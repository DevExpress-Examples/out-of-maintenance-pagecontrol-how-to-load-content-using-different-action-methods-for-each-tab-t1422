@model MVCxGridViewDataBinding.Models.MyModel
@Html.DevExpress().FormLayout(settings =>
{
    settings.Name = "FormLayout1";

    var groupItem = settings.Items.AddGroupItem(groupSettings =>
    {
        groupSettings.Caption = "Contact Info";
        groupSettings.ShowCaption = DefaultBoolean.True;
        groupSettings.GroupBoxDecoration = GroupBoxDecoration.Default;
    });

    groupItem.SettingsItems.ShowCaption = DefaultBoolean.True;
    groupItem.SettingsItemCaptions.Location = LayoutItemCaptionLocation.Left;

    groupItem.SettingsItemHelpTexts.Position = HelpTextPosition.Auto;

    groupItem.Items.Add(m => m.ModelID, item =>
    {
        item.HelpText = "Enter ID";
    });
    groupItem.Items.Add(m => m.ModelName, item =>
    {
        item.HelpText = "Enter Name";
    });
    groupItem.Items.Add(m => m.ModelState, item =>
    {
        item.HelpText = "Define State";
    });
    groupItem.Items.Add(m => m.ModelDate, item =>
    {
        item.HelpText = "Setup Date";
    });
}).GetHtml()
